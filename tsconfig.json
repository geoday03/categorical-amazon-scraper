{
	"compilerOptions": {
		"target": "ES5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"baseUrl": "src",
		"outDir": "out",
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"sourceMap": true,
		"paths": {
			"lib/*": ["lib/*"]
		},
		"incremental": true
	},
	"include": ["**/*.ts", "src"],
	"exclude": ["node_modules"]
}
